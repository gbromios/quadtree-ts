{
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"],
    "compilerOptions": {
      "declaration": true,
      "outDir": "./types",
      "target": "esnext",
      "lib": ["esnext", "dom"],
      "strict": true,
      "noImplicitAny": false,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      }
    }
}
